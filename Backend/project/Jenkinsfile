pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/viet']], // Đảm bảo sử dụng nhánh 'viet'
                    userRemoteConfigs: [
                        [url: 'git@github.com:haquocviet261/PetShopServer.git']
                    ]
                ])
            }
        }
        stage('Build') {
            steps {
                dir('/var/jenkins_home/workspace/Pet_Shop_Server/Backend/project') {
                   sh 'chmod +x mvnw'
                   sh './mvnw clean install'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'java -jar /var/jenkins_home/workspace/Pet_Shop_Server/Backend/project/target/project-0.0.1-SNAPSHOT.jar'
            }
        }
    }

    post {
        success {
            echo 'Build successfully!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
